# NextAuth (OAuth)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
# Redirect URI (dev): http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Redirect URI (dev): http://localhost:3000/api/auth/callback/github
GITHUB_ID=
GITHUB_SECRET=

# Backend connectivity (server-side only)
CVA_BACKEND_URL=http://localhost:8001

# Backend token (server-side only)
# Must match CVA_API_TOKEN in the FastAPI backend when CVA_PRODUCTION=true
CVA_API_TOKEN=

# Optional: force auth even in development
# CVA_REQUIRE_AUTH=true
